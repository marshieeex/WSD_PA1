@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<div class="row">
    <div class="col-sm-8">
        <h3>Order Form</h3>
        <p>Ready to order? Here is our order form!</p>

        <div class="row">
            <div class="form-group col-lg-4">
                <label for="input2">Name</label>
                <input type="text" id="input2" class="form-control" name="contact_name" required>
            </div>
            <div class="form-group col-lg-4">
                <label for="input2">Delivery Location</label>
                <input type="text" id="input2" class="form-control" name="contact_location" required>
            </div>
            <div class="form-group col-lg-4">
                <label for="input2">Delivery Date</label>
                <input type="date" id="input2" class="form-control" name="contact_location" required>
            </div>
            <div class="form-group col-lg-4">
                <label for="input2">Delivery Time</label>
                <input type="time" id="input2" class="form-control" name="contact_location" required>
            </div>
            <div class="form-group col-lg-4">
                <label for="input3">Contact Number</label>
                <input type="number" id="input3" class="form-control" name="contact_phone" required>
            </div>
            <div class="form-group col-lg-4">
                <label for="input2">Email Address</label>
                <input type="email" id="input2" class="form-control" name="contact_email" required>
            </div>


            <label class="container">

                <h3>Our Menu</h3>

                <input type="checkbox">
                <span class="checkmark"></span> Beef Burger
                <p>Quantity:</p><input type="number" id="input3" class="form-control" name="number" required>
            </label>

            <label class="container">
                <input type="checkbox">
                <span class="checkmark"></span> Chicken Burger
                <p>Quantity:</p><input type="number" id="input3" class="form-control" name="number" required>
            </label>

            <label class="container">
                <input type="checkbox">
                <span class="checkmark"></span> Iced Coffee
                <p>Quantity:</p><input type="number" id="input3" class="form-control" name="number" required>
            </label>

            <label class="container">
                <input type="checkbox">
                <span class="checkmark"></span> Iced Lemon Tea
                <p>Quantity:</p><input type="number" id="input3" class="form-control" name="number" required>
            </label>

            <label class="container">
                <input type="checkbox">
                <span class="checkmark"></span> Fries
                <p>Quantity:</p><input type="number" id="input3" class="form-control" name="number" required>
            </label>
            <label class="container">
                <input type="checkbox">
                <span class="checkmark"></span> Wedges
                <p>Quantity:</p><input type="number" id="input3" class="form-control" name="number" required>
            </label>

            <div class="clearfix"></div>
            <br />
            <div class="form-group col-lg-12">
                <label for="input4">Description</label>
                <textarea id="input4" rows="6" class="form-control" name="contact_description" required></textarea>
            </div>
            <a href="http://localhost:58974/ViewOrder/Index">
                <div class="form-group col-lg-12">
                    <input type="hidden" value="contact" name="save">
                    <button class="btn btn-primary" type="submit">Order Now!</button>
            </a>
        </div>
        </div>
        </form>
    </div>
    </div>